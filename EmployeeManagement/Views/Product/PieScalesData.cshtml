
@{
    ViewBag.Title = "PieScalesData";

    var productLabels = Json.Encode(ViewBag.ProductLabels);
    var productValues = Json.Encode(ViewBag.ProductValues);
}

<h2>產品營收</h2>

<div class="row">
    <canvas id="peiChart"></canvas>
</div>

@section endJS{
<script>
    var ctxPie = document.getElementById("peiChart");
    var pieChart = new Chart(ctxPie, {
        type: 'pie',
        data: {
            labels: ["3C電子", "食品", "服飾", "保養品", "日常用品", "原物料"],
            datasets: [{
                data: [39.1, 8.7, 15, 14, 8, 15.2],
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)',
                    'rgb(75, 192, 192)',
                    'rgb(153, 102, 255)',
                    'rgb(255, 159, 64)'
                ]
            }],
        },
        options: {
            responsive: true,
            title: {
                display: true,
                fontSize: 26,
                text: '營收分布%'
            },
            legend: {
                position: 'bottom',
                labels: {
                    fontColor: 'black',
                }
            }
        }
    });
</script>
}



